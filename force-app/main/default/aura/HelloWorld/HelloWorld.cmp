<aura:component description="HelloWorld" implements="flexipage:availableForRecordHome" controller="HelloWorldController">
    <aura:attribute name="greeting" type="String" default="World" />

    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <lightning:input name="Greeting" label="Greeting" value="{!v.greeting}" />

    Hello, {!v.greeting}!
</aura:component>
